{
  "packageManager": "pnpm@10.18.3",
  "type": "module",
  "scripts": {
    "check": "biome check .",
    "fmt": "node ./scripts/run-format.mjs",
    "fmt:yaml": "node ./scripts/format-yaml.mjs",
    "fmt:biome": "biome format --write .",
    "commitlint": "commitlint",
    "lint:ruff": "uv run ruff check .",
    "lint:eslint": "eslint --max-warnings=0 --no-warn-ignored --cache --cache-location .cache/eslint --ext .js,.cjs,.mjs,.ts,.tsx,.jsx .",
    "lint:staged": "bash ./scripts/lint-staged.sh",
    "lint:sarif": "node ./scripts/run-lint-sarif.mjs",
    "lint": "pnpm lint:ruff && pnpm check && pnpm lint:eslint",
    "setup:lint": "bash scripts/setup-linting.sh",
    "setup:tooling": "bash scripts/setup-tooling.sh",
    "sync": "bash scripts/sync-environments.sh",
    "cache:prune": "bash ./scripts/cache-prune.sh"
  },
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "3.1.0",
    "@biomejs/biome": "2.2.6",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.37.0",
    "eslint": "9.37.0",
    "eslint-plugin-import": "2.32.0",
    "globals": "16.4.0",
    "typescript-eslint": "8.46.1",
    "yaml": "2.8.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "fmt",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  }
}
